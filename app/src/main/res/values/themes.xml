<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#4b830d</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <item name="floatingActionButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>


    <style name="actionOverflowButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/primary</item>

    </style>
    <style name="Popup" parent="ThemeOverlay.AppCompat.Light"/>

</resources>